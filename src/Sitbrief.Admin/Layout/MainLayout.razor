@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <span class="title">Sitbrief 管理後台</span>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<style>
    .page {
        display: flex;
        height: 100vh;
    }

    .sidebar {
        background-color: #2c3e50;
        width: 250px;
        color: white;
    }

    main {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .top-row {
        background-color: #f8f9fa;
        border-bottom: 1px solid #e0e0e0;
        height: 60px;
        display: flex;
        align-items: center;
    }

    .title {
        font-size: 1.25rem;
        font-weight: 500;
    }

    .content {
        padding: 1.5rem;
        flex: 1;
        overflow-y: auto;
    }
</style>
